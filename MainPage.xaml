<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCrud.MainPage"
             BackgroundColor="White">
    
    <StackLayout Padding="20">
        <Label Text="Expense Categories" FontSize="24" HorizontalOptions="Center" TextColor="Black" />
        <Picker x:Name="expenseCategoriesPicker" Title="Category" BackgroundColor="Grey" ItemDisplayBinding="{Binding Name}"  />
        <ListView x:Name="expenseCategoriesListView"
                  Margin="0,10,0,0"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                            <Label Text="{Binding Description}" FontSize="14" TextColor="Black" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
